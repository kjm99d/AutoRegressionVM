<Window x:Class="AutoRegressionVM.Views.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="설정" Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        MinWidth="600" MinHeight="500">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Padding" Value="4"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Padding" Value="4"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Padding" Value="4"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,4,0,4"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0">
            <!-- 일반 설정 탭 -->
            <TabItem Header="일반">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <GroupBox Header="VMware 설정" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <TextBlock Text="VMware 설치 경로:" Margin="0,0,0,4"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="txtVMwareInstallPath" Grid.Column="0" Margin="0,0,8,8"/>
                                    <Button Grid.Column="1" Content="찾아보기" Click="BrowseVMwarePath_Click" Width="80" Height="26"/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="저장 경로" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <TextBlock Text="시나리오 저장 경로:" Margin="0,0,0,4"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="txtScenariosPath" Grid.Column="0" Margin="0,0,8,8"/>
                                    <Button Grid.Column="1" Content="찾아보기" Click="BrowseScenariosPath_Click" Width="80" Height="26"/>
                                </Grid>

                                <TextBlock Text="결과 저장 경로:" Margin="0,0,0,4"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="txtResultOutputPath" Grid.Column="0" Margin="0,0,8,8"/>
                                    <Button Grid.Column="1" Content="찾아보기" Click="BrowseResultPath_Click" Width="80" Height="26"/>
                                </Grid>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- 알림 설정 탭 -->
            <TabItem Header="알림">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <CheckBox x:Name="chkNotificationEnabled" Content="알림 사용" FontWeight="SemiBold"
                                  Checked="NotificationEnabled_Changed" Unchecked="NotificationEnabled_Changed"/>

                        <GroupBox x:Name="grpNotificationSettings" Header="알림 설정" Margin="0,10,0,15" IsEnabled="False">
                            <StackPanel Margin="10">
                                <TextBlock Text="알림 유형:" Margin="0,0,0,4"/>
                                <ComboBox x:Name="cboNotificationType" SelectionChanged="NotificationType_Changed">
                                    <ComboBoxItem Content="Slack" Tag="Slack"/>
                                    <ComboBoxItem Content="Microsoft Teams" Tag="Teams"/>
                                    <ComboBoxItem Content="Email (SMTP)" Tag="Email"/>
                                </ComboBox>

                                <!-- Slack 설정 -->
                                <StackPanel x:Name="pnlSlackSettings" Visibility="Collapsed">
                                    <TextBlock Text="Slack Webhook URL:" Margin="0,8,0,4"/>
                                    <TextBox x:Name="txtSlackWebhookUrl"/>
                                    <TextBlock Text="예: https://hooks.slack.com/services/..."
                                               Foreground="Gray" FontSize="11" Margin="0,0,0,8"/>
                                </StackPanel>

                                <!-- Teams 설정 -->
                                <StackPanel x:Name="pnlTeamsSettings" Visibility="Collapsed">
                                    <TextBlock Text="Teams Webhook URL:" Margin="0,8,0,4"/>
                                    <TextBox x:Name="txtTeamsWebhookUrl"/>
                                    <TextBlock Text="예: https://outlook.office.com/webhook/..."
                                               Foreground="Gray" FontSize="11" Margin="0,0,0,8"/>
                                </StackPanel>

                                <!-- Email 설정 -->
                                <StackPanel x:Name="pnlEmailSettings" Visibility="Collapsed">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Grid.Column="0" Margin="0,8,10,0">
                                            <TextBlock Text="SMTP 서버:" Margin="0,0,0,4"/>
                                            <TextBox x:Name="txtSmtpServer"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Margin="0,8,0,0">
                                            <TextBlock Text="포트:" Margin="0,0,0,4"/>
                                            <TextBox x:Name="txtSmtpPort" Text="587"/>
                                        </StackPanel>
                                    </Grid>

                                    <TextBlock Text="SMTP 사용자명 (이메일):" Margin="0,0,0,4"/>
                                    <TextBox x:Name="txtSmtpUsername"/>

                                    <TextBlock Text="SMTP 비밀번호 (앱 비밀번호):" Margin="0,0,0,4"/>
                                    <PasswordBox x:Name="txtSmtpPassword"/>

                                    <TextBlock Text="받는 사람 이메일:" Margin="0,0,0,4"/>
                                    <TextBox x:Name="txtEmailTo"/>
                                    <TextBlock Text="여러 명은 쉼표(,)로 구분"
                                               Foreground="Gray" FontSize="11" Margin="0,0,0,8"/>
                                </StackPanel>

                                <Button Content="연결 테스트" Click="TestNotification_Click"
                                        Width="100" HorizontalAlignment="Left" Margin="0,10,0,0"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="알림 조건" Margin="0,0,0,15" x:Name="grpNotificationConditions" IsEnabled="False">
                            <StackPanel Margin="10">
                                <CheckBox x:Name="chkNotifyOnStart" Content="테스트 시작 시 알림"/>
                                <CheckBox x:Name="chkNotifyOnComplete" Content="테스트 완료 시 알림" IsChecked="True"/>
                                <CheckBox x:Name="chkNotifyOnFailure" Content="테스트 실패 시 알림" IsChecked="True"/>
                                <CheckBox x:Name="chkNotifyOnError" Content="오류 발생 시 알림" IsChecked="True"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- VM 설정 탭 -->
            <TabItem Header="VM 관리">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="VMware에서 가져오기" Click="ImportFromVMware_Click" Margin="0,0,10,0" Padding="10,5"/>
                        <Button Content="VM 추가" Click="AddVM_Click" Margin="0,0,10,0" Padding="10,5"/>
                        <Button Content="VM 제거" Click="RemoveVM_Click" Padding="10,5"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" x:Name="dgVMs" AutoGenerateColumns="False"
                              CanUserAddRows="False" CanUserDeleteRows="False"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="이름" Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                            <DataGridTextColumn Header="VMX 경로" Binding="{Binding VmxPath}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="사용자명" Binding="{Binding GuestUsername, UpdateSourceTrigger=PropertyChanged}" Width="100"/>
                            <DataGridTextColumn Header="비밀번호" Binding="{Binding GuestPassword, UpdateSourceTrigger=PropertyChanged}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBlock Grid.Row="2" Text="※ Guest 사용자명/비밀번호는 VM 내부 프로그램 실행 시 필요합니다. 셀을 더블클릭하여 편집하세요."
                               Foreground="Gray" FontSize="11" Margin="0,10,0,0"/>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- 버튼 영역 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="저장" Click="Save_Click" Width="80" Margin="0,0,10,0" IsDefault="True"/>
            <Button Content="취소" Click="Cancel_Click" Width="80" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
