<Window x:Class="AutoRegressionVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoRegressionVM"
        xmlns:vm="clr-namespace:AutoRegressionVM.ViewModels"
        mc:Ignorable="d"
        Title="AutoRegressionVM - 자동 리그레션 테스트" 
        Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <!-- 상단 툴바 -->
        <ToolBar Grid.Row="0" Padding="5">
            <Button Command="{Binding ConnectCommand}" Padding="10,5" Margin="2">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🔌" Margin="0,0,5,0"/>
                    <TextBlock Text="연결"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding DisconnectCommand}" Padding="10,5" Margin="2">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⏏" Margin="0,0,5,0"/>
                    <TextBlock Text="연결 해제"/>
                </StackPanel>
            </Button>
            <Separator Margin="10,0"/>
            <Button Command="{Binding AddVMCommand}" Padding="10,5" Margin="2">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="➕" Margin="0,0,5,0"/>
                    <TextBlock Text="VM 추가"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding NewScenarioCommand}" Padding="10,5" Margin="2">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📝" Margin="0,0,5,0"/>
                    <TextBlock Text="새 시나리오"/>
                </StackPanel>
            </Button>
            <Separator Margin="10,0"/>
            <Button Command="{Binding RunScenarioCommand}" Padding="15,5" Margin="2" Background="#4CAF50" Foreground="White">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="▶" Margin="0,0,5,0"/>
                    <TextBlock Text="실행"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding StopCommand}" Padding="15,5" Margin="2" Background="#f44336" Foreground="White">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⏹" Margin="0,0,5,0"/>
                    <TextBlock Text="중지"/>
                </StackPanel>
            </Button>
            <Separator Margin="10,0"/>
            <Button Command="{Binding SettingsCommand}" Padding="10,5" Margin="2">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⚙" Margin="0,0,5,0"/>
                    <TextBlock Text="설정"/>
                </StackPanel>
            </Button>
            <Separator Margin="10,0"/>
            <Button Command="{Binding ViewHistoryCommand}" Padding="10,5" Margin="2">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📊" Margin="0,0,5,0"/>
                    <TextBlock Text="이력"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding ExportReportCommand}" Padding="10,5" Margin="2">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📄" Margin="0,0,5,0"/>
                    <TextBlock Text="리포트"/>
                </StackPanel>
            </Button>
        </ToolBar>

        <!-- 메인 콘텐츠 -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- 왼쪽: VM 목록 -->
            <GroupBox Grid.Column="0" Header="VM 목록">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ListBox ItemsSource="{Binding VMs}"
                             SelectedItem="{Binding SelectedVM}"
                             Margin="5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding VmxPath}" FontSize="10" Foreground="Gray" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- 병렬 실행 상태 모니터 -->
                    <ItemsControl Grid.Row="1" ItemsSource="{Binding VMExecutionStatuses}"
                                  Visibility="{Binding IsRunning, Converter={StaticResource BoolToVis}}"
                                  Margin="5,0,5,5">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="LightGray" BorderThickness="1" Margin="0,2" Padding="5">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="8" Height="8" Margin="0,0,5,0">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Setter Property="Fill" Value="Gray"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                                <Setter Property="Fill" Value="#4CAF50"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                            </Ellipse>
                                            <TextBlock Text="{Binding VMName}" FontWeight="SemiBold" FontSize="11"/>
                                        </StackPanel>
                                        <StackPanel Grid.Row="1">
                                            <TextBlock Text="{Binding PhaseText}" FontSize="10" Foreground="Gray"/>
                                            <ProgressBar Height="4" Value="{Binding Progress}" Maximum="100" Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <TextBlock Text="VM을 추가하세요" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Foreground="Gray"
                               Visibility="{Binding VMs.Count, Converter={StaticResource BoolToVis}, ConverterParameter=Inverse}"/>
                </Grid>
            </GroupBox>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>

            <!-- 중앙: 시나리오 -->
            <GroupBox Grid.Column="2" Header="테스트 시나리오">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 시나리오 선택 및 관리 -->
                    <Grid Grid.Row="0" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox ItemsSource="{Binding Scenarios}"
                                  SelectedItem="{Binding SelectedScenario}"
                                  DisplayMemberPath="Name"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="5,0,0,0">
                            <Button Content="✏" Command="{Binding EditScenarioCommand}"
                                    ToolTip="시나리오 편집" Width="26" Margin="0,0,2,0"/>
                            <Button Content="🗑" Command="{Binding DeleteScenarioCommand}"
                                    ToolTip="시나리오 삭제" Width="26"/>
                        </StackPanel>
                    </Grid>

                    <!-- 시나리오 상세 -->
                    <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" Margin="5">
                        <ScrollViewer>
                            <StackPanel Margin="10" DataContext="{Binding SelectedScenario}">
                                <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Foreground="Gray" Margin="0,0,0,15"/>

                                <TextBlock Text="테스트 Steps:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ItemsControl ItemsSource="{Binding Steps}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="LightGray" BorderThickness="1" Margin="0,0,0,5" Padding="10">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="{Binding Order}" FontWeight="Bold" Margin="0,0,10,0"/>
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                        <TextBlock Text="{Binding SnapshotName, StringFormat='스냅샷: {0}'}" FontSize="11" Foreground="Gray"/>
                                                        <TextBlock Text="{Binding Execution.ExecutablePath, StringFormat='실행: {0}'}" FontSize="11" Foreground="Gray" TextTrimming="CharacterEllipsis"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </GroupBox>

            <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch"/>

            <!-- 오른쪽: 테스트 결과 -->
            <GroupBox Grid.Column="4" Header="테스트 결과">
                <ListBox ItemsSource="{Binding TestResults}" Margin="5">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="8" Margin="2" BorderThickness="0,0,0,1" BorderBrush="LightGray">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" FontSize="16" Margin="0,0,10,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Passed">
                                                        <Setter Property="Text" Value="✅"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                        <Setter Property="Text" Value="❌"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Running">
                                                        <Setter Property="Text" Value="🔄"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Error">
                                                        <Setter Property="Text" Value="⚠️"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding TestStepName}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding VMName}" FontSize="11" Foreground="Gray"/>
                                        <TextBlock Text="{Binding Duration, StringFormat='소요: {0:mm\\:ss}'}" FontSize="11" Foreground="Gray"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </GroupBox>
        </Grid>

        <!-- 진행률 바 -->
        <Grid Grid.Row="2" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ProgressBar Grid.Column="0" Height="20" Value="{Binding ProgressPercent}" Maximum="100"/>
            <TextBlock Grid.Column="0" Text="{Binding CurrentPhase}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1" Text="{Binding ProgressPercent, StringFormat={}{0:F0}%}" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </Grid>

        <!-- 하단: 로그 -->
        <GroupBox Grid.Row="3" Header="로그" Margin="10,0,10,10">
            <ListBox ItemsSource="{Binding Logs}" 
                     FontFamily="Consolas" 
                     FontSize="11"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="5,2"/>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </GroupBox>

        <!-- 상태 표시줄 -->
        <StatusBar Grid.Row="3" VerticalAlignment="Bottom" Margin="10,0,10,0">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="10" Height="10" Margin="0,0,5,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="Gray"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Fill" Value="Green"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Text="{Binding StatusMessage}"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
